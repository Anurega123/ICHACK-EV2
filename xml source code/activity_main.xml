<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm2"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="74dp"
        android:layout_height="76dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ev3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/skranji"
        android:text="Emergency vehicle vigilant"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="172.00dp"
        android:layout_height="172.00dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/circle"
        android:elevation="40dp"
        android:fontFamily="@font/skranji"
        android:text="RESCUE ROUTE"
        android:textColor="@color/white"
        android:textSize="38dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/borderinpreg"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/logout"
            android:layout_marginTop="15dp"
            android:id="@+id/logout"
            android:layout_marginLeft="50dp">
        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/account"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp">
        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/location"
            android:layout_marginTop="15dp"
            android:id="@+id/getloaction"
            android:layout_marginLeft="60dp">
        </ImageView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>